class Solution {
public:
    int minInsertions(string s) {
               string s2;
        s2 += s;
        reverse(s2.begin() , s2.end());
        int n = s.size() , m = s2.size();
        int dp[n+1][m+1];
        
        for(int j=0 ; j<=n ; j++)
            dp[j][0] = 0;
        for(int i =0 ; i<=m ; i++)
            dp[0][i] = 0;
        
        for(int i=1 ; i<=n ; i++)
        {
            for(int j=1 ; j<=m ; j++)
            {
                if(s[i-1] == s2[j-1])
                    dp[i][j] = 1 + dp[i-1][j-1];
                else
                    dp[i][j] = max(dp[i-1][j] , dp[i][j-1]);
            }
        }
        
        return (n-dp[n][m]);
    }
};
